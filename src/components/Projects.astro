        name: 'WordPress',
        icon: WordPressIcon
    },

}
const PROJECTS = [
    {
        title: 'Porfolio Fran Riera',
        description: 'Porflio donde se especifican experiencias, estudios y proyectos realizados.',
        link: '#',
        github: '#',
        image: 'https://placehold.co/800x600',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.TAILWIND]
    },
    {
        title: 'FEMO Ingenieria',
        description: 'Empresa dedicada al calculo de estructuras.',
        link: 'https://femoingenieria.com/',
        image: 'https://placehold.co/800x600',
        tags: [TAGS.WORDPRESS]
    },
    {
        title: 'Restaurante HERO',
        description: 'Empresa de restauraciÃ³n en Denia, Alicante.',
