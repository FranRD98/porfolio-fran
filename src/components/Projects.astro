    },
    BOOTSTRAP : {
        name: "Bootstrap",
        icon: BootstrapIcon
    },
    PHP : {
        name: "PHP",
        icon: PHPIcon
    },
    SQLSERVER : {
        name: "SQL Server",
        icon: SQLServerIcon
    },
    ASTRO : {
        name: "Astro",
        icon: AstroIcon
    },
    DOCKER : {
