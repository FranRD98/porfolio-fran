---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SocialPill from "../components/SocialPills.astro";
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import GitHubIcon from '../components/icons/GitHubIcon.astro';
import MailIcon from '../components/icons/MailIcon.astro';
import ExperienceIcon from '../components/icons/ExperienceIcon.astro';
import ProjectsIcon from "../components/icons/ProjectsIcon.astro";
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Projects from '../components/Projects.astro';
---

<Layout 
	title="Porfolio de Fran Riera - Desarrollador y Programador Web"
	description="Contrata a Fran Riera para crear tu aplicación web. Desarrollador web."
>
	<main class="px-6">
		<SectionContainer class="py-44 pb-20">
			<img 
				class="rounded-full size-28 mb-4" 
				src="https://avatars.githubusercontent.com/u/43618868?v=4" 
				alt="franriera photo"
			/>
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
					Hey, soy Fran Riera <a
					href="https://www.linkedin.com/in/franrd"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Open to Work</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-pretty max-w-[700px]">
				<span>+15 años de experiencia. </span><span class="text-[#00868E]">Desarrollador Web y Creador de Contenido</span>.
				<span class="text-yellow-200/90"> De Alicante, España</span>.<span class="opacity-75"> Especializado en crear aplicaciones únicas.</span>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
					<SocialPill href="https://www.linkedin.com/in/franrd/">
						<LinkedInIcon class="size-4 md:size-6"/>
							LinkedIn
					</SocialPill>
					<SocialPill href="https://github.com/FranRD98">
						<GitHubIcon class="size-4 md:size-6"/>
							GitHub
					</SocialPill>
					<SocialPill href="mailto:franrd98@outlook.com">
						<MailIcon class="size-4 md:size-6"/>
							franrd98@outlook.com
					</SocialPill>
				</nav>
			</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ExperienceIcon class="size-7"/>
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ProjectsIcon class="size-7"/>
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

	</main>
</Layout>
